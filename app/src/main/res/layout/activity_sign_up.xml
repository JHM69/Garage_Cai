<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:layout_gravity="center_horizontal"    android:foregroundGravity="center_horizontal">    <Button        android:id="@+id/button"        android:layout_width="0dp"        android:layout_height="52dp"        android:layout_gravity="center_horizontal"        android:layout_marginTop="16dp"        android:text="@string/verify"        android:textColor="@color/white"        android:textSize="20sp"        app:cornerRadius="25dp"        app:layout_constraintEnd_toEndOf="@+id/jhvjkjkvx"        app:layout_constraintStart_toStartOf="@+id/jhvjkjkvx"        app:layout_constraintTop_toBottomOf="@+id/jhvjkjkvx" />    <com.google.android.material.textfield.TextInputLayout        android:id="@+id/jhvjkjkvx"        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="16dp"        android:layout_marginTop="32dp"        android:layout_marginEnd="16dp"        android:hint="@string/mobile_number"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/textView4">        <EditText            android:id="@+id/number"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:importantForAutofill="no"            android:inputType="number"            android:maxLength="25"            tools:ignore="LabelFor" />    </com.google.android.material.textfield.TextInputLayout>    <TextView        android:id="@+id/textView4"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginStart="24dp"        android:layout_marginTop="24dp"        android:layout_marginEnd="24dp"        android:text="We need to register your phone number before getting started"        android:textAlignment="center"        android:textColor="?android:textColorPrimary"        android:textIsSelectable="true"        android:textSize="20sp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/book" />    <ImageView        android:id="@+id/imageView16"        android:layout_width="wrap_content"        android:layout_height="180dp"        android:layout_marginTop="24dp"        android:visibility="visible"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:srcCompat="@drawable/login" />    <TextView        android:id="@+id/textView16"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginTop="32dp"        android:clickable="true"        android:focusable="auto"        android:gravity="center"        android:linksClickable="true"        android:text="@string/create_account"        android:textColor="@color/colorPrimary"        android:textStyle="bold"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/button" />    <TextView        android:id="@+id/book"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="21dp"        android:text="Phone Verification"        android:textColor="@color/olive"        android:textSize="28sp"        android:textStyle="bold"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/imageView16" /></androidx.constraintlayout.widget.ConstraintLayout>